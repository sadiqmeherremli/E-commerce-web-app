@model Color

<div class="col-lg-6">
    <form asp-controller="Color" asp-action="Add" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header"><strong>Color</strong><small> Form</small></div>
            <div class="card-body card-block">
                <div class="form-group">
                    <label asp-for="Name" class=" form-control-label">Name</label>
                    <input asp-for="Name" type="text" placeholder="Name" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Code" class=" form-control-label">Code</label><br />
                    <input type="color" id="color" asp-for="Code" value="#ff0000" class="form-control" style="height:150px;">
                </div>
                <label class="form-check-label" asp-for="IsActive">Activation</label>
                <div class="form-check form-switch fs-4">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                </div><br />
                <button type="submit" class="btn btn-lg btn-info btn-block">
                    <span id="payment-button-amount">Add</span>
                    <span id="payment-button-sending" style="display:none;">Sending…</span>
                </button>
            </div>
        </div>
    </form>
</div>

