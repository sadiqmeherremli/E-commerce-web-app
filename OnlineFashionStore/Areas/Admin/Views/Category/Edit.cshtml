@model Category
<div class="col-lg-6">
    <form asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header"><strong>Category</strong><small> Form</small></div>
            <div class="card-body card-block">
                <div class="form-group">
                    <label asp-for="Name" class="form-control-label">Category Name</label>
                    <input asp-for="Name" type="text" placeholder="Name" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="ParentId" class="form-control-label">Select Parent Category</label>
                    <select asp-for="ParentId" id="select" class="form-control">
                        <option value="null">Please select</option>
                        @foreach (var item in ViewBag.Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }

                    </select>
                </div>
                <label class="form-check-label" asp-for="IsActive">Activation</label>
                <div class="form-check form-switch fs-4">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                </div><br />
                <button type="submit" class="btn btn-lg btn-info btn-block">
                    <span id="payment-button-amount">Save</span>
                    <span id="payment-button-sending" style="display:none;">Sending…</span>
                </button>
            </div>
        </div>
    </form>
</div>